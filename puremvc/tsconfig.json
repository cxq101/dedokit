  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "stripInternal": true,
    "newLine": "LF",
    "lib": [
      "es5",
      "DOM"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
